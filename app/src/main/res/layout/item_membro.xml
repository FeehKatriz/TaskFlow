<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bckg_membro"
    android:elevation="4dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/usertype"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeMembro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Nome do Membro"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/opcoes"
        app:layout_constraintStart_toEndOf="@id/imgUsuario"
        app:layout_constraintTop_toTopOf="@id/imgUsuario" />

    <TextView
        android:id="@+id/cargoMembro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Creator"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/nomeMembro"
        app:layout_constraintTop_toBottomOf="@id/nomeMembro" />

    <ImageView
        android:id="@+id/opcoes"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/more_points"
        android:drawableTint="@color/material_dynamic_neutral30"
        app:layout_constraintBottom_toBottomOf="@id/imgUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgUsuario" />

</androidx.constraintlayout.widget.ConstraintLayout>